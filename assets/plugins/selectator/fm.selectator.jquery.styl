/* dimmer */
#selectator_dimmer
	background-color rgba(0, 0, 0, .1)
	width 100%
	height 100%
	position fixed
	z-index 100
/* main element */
.selectator_element
	border 1px solid #d0d1d4
	box-sizing border-box
	background-color #fff
	display inline-block
	text-decoration none
	vertical-align middle
	*
		box-sizing border-box
		text-decoration none
	img
		display block
	&.focused
		box-shadow 0 0 1px #39f
	&.multiple
		padding-right 20px !important
		padding-bottom 5px !important
	&.single
		height 36px
		padding 7px 10px !important
	&:after
		position absolute
		cursor pointer
		content '\25BC'
		font-size 90%
		right 4px
		color #aaa
		top 50%
		line-height 0
	.selectator_chosen_items
		display inline
		.single&
			display block
		.selectator_chosen_item
			display inline-block
			background-color #39f
			border-radius 2px
			color #fff
			padding 4px 20px 4px 4px
			font-size 13px
			margin 2px
			position relative
			vertical-align top
			.single&
				background-color transparent
				color #000
				display block
				text-decoration none
				padding 0
				margin 0
				font-size inherit
			.multiple&
				margin 5px 0 0 5px
				padding 3px 20px 2px 5px
			.selectator_chosen_item_left
				float left
				width 25px
				img
					height 23px
				.multiple&
					float left
					width 22px
					img
						height 18px
			.selectator_chosen_item_title
				.single&
					height auto
				.multiple&
					float left
					padding-top 2px
			.selectator_chosen_item_subtitle
				display none
			.selectator_chosen_item_right
				float right
				width 20px
				background-color #ccc
				font-size 15px
				color #fff
				text-align center
				border-radius 3px
				padding 3px
				margin-right 20px
				.multiple&
					display none
			.selectator_chosen_item_remove
				display inline-block
				font-weight bold
				color #fff
				margin 0 0 0 5px
				padding 6px 5px 4px 5px
				cursor pointer
				font-size 11px
				line-height 10px
				vertical-align top
				border-radius 0 2px 2px 0
				position absolute
				right 0
				top 0
				bottom 0
				&:hover
					color #000
					background-color #8cf
				.single&
					display none
				.multiple&
					padding 7px 5px 4px 5px
					&:hover
						''
	.selectator_input
	.selectator_textlength
		border 0
		display inline-block
		margin 0
		background-color transparent
		font-size 13px
		outline none
		padding 6px 0 0 0
		.multiple&
			padding 1px 0 0 0
			margin 7px 0 2px 5px

	.selectator_input
		.single&
			border 1px solid #7f9db9
			position absolute
			bottom -40px
			left -1px
			z-index 101
			padding 10px 25px
			width 100%
			width calc(100% + 2px)
			border-bottom 0
			background-color #f6f6f6
			color #333
			font-size inherit
		.single.options-hidden&
			opacity 0
			position absolute
			left -10000px
		.single.options-visible&
			opacity 1
		.disable_search&
			opacity 0
			padding 0 1px 1px 0 !important
	.selectator_options
		margin 0
		padding 0
		border 1px solid #7f9db9
		border-radius 0 0 3px 3px
		font-family sans-serif
		position absolute
		box-sizing border-box
		-moz-box-sizing border-box
		z-index 101
		background-color #fff
		overflow-y scroll
		max-height 250px
		list-style none
		left -1px
		right -1px
		.single&
			padding-top 0
			border-top 0
		.disable_search&
			border-top 1px solid #7f9db9
		.single.disable_search&
			padding-top 0
		.options-hidden&
			display none
		.selectator_option
			padding 5px
			cursor pointer
			color #000
			&:before
			&:after
				content ""
				display table
			&:after
				clear both
			&.active
				background-color #39f
				color #fff
		.selectator_group
			padding 5px
			font-weight bold
		.selectator_group_option
			padding 5px 5px 5px 20px
		.selectator_option
		.selectator_group_option
			.selectator_option_left
				float left
				& img
					height 30px
			.selectator_option_title
				margin-left 35px
			.selectator_option_subtitle
				font-size 75%
				color #888
				margin-left 35px
			.selectator_option_right
				float right
				width 30px
				background-color #ccc
				font-size 15px
				color #fff
				text-align center
				border-radius 3px
				padding 6px
